{
  "name": "electron-app-react",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "author": "Gabriel Nobrega",
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3",
    "styled-components": "^4.2.0",
    "transparent-titlebar": "^0.1.0"
  },
  "scripts": {
    "start:react": "cross-env BROWSER=none react-scripts start",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "start": "concurrently -k -p [{name}] -n 'ðŸ¦„ React,â­ï¸ Electron' -c 'yellow,magenta' 'npm run start:react' 'wait-on http://localhost:3000/ && npm run start:electron'",
    "prettier": "prettier --single-quote --write '*/src/**/*.{js}'",
    "build:react": "react-scripts build",
    "build:electron": "cross-env NODE_ENV=production electron-builder",
    "build": "npm run build:react && npm run build:electron",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "electron": "^3.0.0-beta.7",
    "electron-builder": "^20.28.3",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "prettier": "^1.14.2",
    "wait-on": "^2.1.0"
  },
  "homepage": "./",
  "build": {
    "appId": "com.electron.myapp",
    "productName": "Electron and React",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  }
}
